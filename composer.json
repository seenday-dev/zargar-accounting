{
    "name": "seenday/zargar-accounting",
    "description": "WordPress plugin for Zargar Accounting integration",
    "type": "wordpress-plugin",
    "require": {
        "php": "^8.1",
        "monolog/monolog": "^2.9",
        "jenssegers/blade": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "ZargarAccounting\\": "includes/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox",
        "test:coverage": "./vendor/bin/phpunit --coverage-html coverage",
        "test:simple": "php tests/run-tests.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    }
}
